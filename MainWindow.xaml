<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="Tetris"
        Height="600"
        Width="800"
        MinWidth="600"
        MinHeight="600"
        KeyDown="Window_KeyDown">

    <!-- Grille principale : 2 lignes, 3 colonnes -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Ligne 0 : Score, éventuellement d’autres infos -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 1 : Le jeu, Timer, Next/Hold, etc. -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Colonne 0 : Timer ou autre -->
            <ColumnDefinition Width="Auto"/>
            <!-- Colonne 1 : Canvas du jeu -->
            <ColumnDefinition Width="Auto"/>
            <!-- Colonne 2 : Next / Hold -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Arrière-plan (image ou couleur unie) -->
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background.png"/>
            <!-- 
            Si vous n'avez pas de Background.png, vous pouvez mettre par exemple :
            <SolidColorBrush Color="Black"/>
            -->
        </Grid.Background>

        <!-- SCORE (ligne 0, colonne 1) -->
        <TextBlock x:Name="ScoreText"
                   Grid.Row="0"
                   Grid.Column="1"
                   Text="Score: 0"
                   Margin="0,10,0,0"
                   TextAlignment="Center"
                   FontSize="28"
                   Foreground="White" />

        <!-- TIMER (ligne 1, colonne 0) -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    VerticalAlignment="Top">
            <TextBlock Text="              Timer"
                       FontSize="20"
                       Margin="0,0,0,5"
                       Foreground="White" Width="224"/>
            <TextBlock x:Name="TimerText"
                       FontSize="24"
                       Text="00:00"
                       Foreground="White" Width="75"/>
        </StackPanel>

        <!-- CANVAS DU JEU (ligne 1, colonne 1) -->
        <Viewbox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,20">
            <Canvas x:Name="GameCanvas"
                    Background="#101010"
                    Width="250"
                    Height="510"
                    ClipToBounds="True" RenderTransformOrigin="2.167,0.532" />
        </Viewbox>

        <!-- NEXT / HOLD (ligne 1, colonne 2) -->
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="253,42,40,0" RenderTransformOrigin="0.593,0.365" Grid.ColumnSpan="2">
            <!-- HOLD -->
            <TextBlock Text="Hold"
                       FontSize="20"
                       Margin="0,0,0,5"
                       Foreground="White" Width="45"/>
            <Image x:Name="HoldImage"
                   Width="120"
                   Height="190"
                   />
            <TextBlock Text="Next"
                       FontSize="20"
                       Foreground="White" Width="47" Height="29"/>

            <!-- NEXT -->
            <Image x:Name="NextImage"
                   Width="120"
                   Height="120" RenderTransformOrigin="0.511,0.802"/>
        </StackPanel>

        <!-- MENU DE DÉMARRAGE -->
        <Grid x:Name="StartMenu"
              Background="#CC000000"
              Visibility="Visible" Margin="0,-8,0,0" Grid.RowSpan="2" Grid.ColumnSpan="3" HorizontalAlignment="Right" Width="862">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Tetris"
                           FontSize="48"
                           TextAlignment="Center"
                           Foreground="White"/>
                <Button Content=" Play"
                        Click="Play_Click"
                        Margin="0,20,0,0"
                        Padding="10"
                        Background="LightGreen" Width="93"/>
                <Button Content="Quit"
                        Click="Quit_Click"
                        Padding="10"
                        Background="Red" Width="93"/>
            </StackPanel>
        </Grid>

        <!-- MENU GAME OVER -->
        <Grid x:Name="GameOverMenu"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Background="#CC000000"
              Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Game Over"
                           FontSize="48"
                           TextAlignment="Center"
                           Foreground="White"/>
                <TextBlock x:Name="FinalScoreText"
                           Text="Score: "
                           FontSize="36"
                           TextAlignment="Center"
                           Foreground="White"/>
                <Button Content="Play Again"
                        Click="PlayAgain_Click"
                        Margin="20,20,0,0"
                        Padding="10"
                        Background="LightGreen"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
